{{# each products }}
        <div class="row">
            {{# each this }}
                <div class="col-md-4 col-sm-6">
                    <div class="card" style="max-width: 18rem; margin-top: 10px">
                        <img class="card-img-top img-responsive" src="{{ this.imagePath }}" alt="product-image">
                        <div class="card-body">
                            <h5 class="card-title">{{ this.title }}</h5>
                            <p class="card-text">{{ this.description }}</p>
                            <div>
                                <div class="price float-left">
                                    {{ this.price }}
                                </div>
                                <a href="/add-to-cart/{{ this._id }}" class="btn btn-success float-right">Add to Shopping Cart</a>
                            </div>

                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{/each}}