{{# if products }}
    <div class="row">
        <div class="col-sm-6 col-md-6.offset-md-3 .offset-sm-3">
            <ul class="list-group">
                {{# each products }}
                    <li class="list-group-item list-group-item-action">
                        <span class="badge badge-secondary">{{ this.qty }}</span>
                        <strong>x {{ this.item.title }}</strong>
                        <span class="alert alert-success float-right">${{ this.price }}</span>
                        <div class="dropdown show">
                            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Edit
                            </a>

                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" href="#">Reduce By 1</a>
                                <a class="dropdown-item" href="#">Remove All</a>
                            </div>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <strong>Total: {{ totalPrice }}</strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
        </div>
    </div>
{{ else }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2>No Items in Cart</h2>
        </div>
    </div>
{{/if}}
